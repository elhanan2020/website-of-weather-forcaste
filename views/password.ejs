<link rel='stylesheet' href="/css/style.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</head>


<body>
<%- include('include/navigation.ejs') %>
<div class="container-fluid ">
    <div class="grid">
            <div> </div>
            <div class="row">
                <div class=" col-xs-12 ;alert alert-warning">
                    <h1>Welcome to <%= title %> page</h1>
                    <p>Please enter your password and  press Create account</p>
                    <form action="/register/password" method="POST" oninput='repassword.setCustomValidity(repassword.value != passwords.value ? "Passwords do not match." : "")'>
                        <div class="form-group">
                            <label for="password">Password:</label>
                            <input class="form-control" id="password" minlength="8" type=password required name=passwords>
                        </div>
                        <div class="form-group">
                            <label for="password2">Confirm password:</label>
                            <input class="form-control" id="password2" type=password name=repassword>
                        </div>
                            <input type=submit class="btn btn-primary" value="Create account">
                    </form>
                    </form>
                </div>
            </div>
        <div></div>
        </div>
    </div>
</div>
</body>

</html>